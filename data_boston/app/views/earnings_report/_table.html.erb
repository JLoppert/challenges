<% if @results.count > 0 %>
  <div class="table-responsive">
    <table id="table" class="table table-striped">
      <thead>
        <tr>
          <% @results.first.keys.each do |key| %>
          <th><%= key.titleize %>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
        <tr>
          <% result.values.each do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $("#table").tablesorter();
  });
</script>
